auto lo
iface lo inet loopback
    address 10.0.0.12/32

auto eth0
iface eth0 inet dhcp

auto swp5
iface swp6
  post-up ip link set $IFACE promisc on

auto swp2
iface swp2
  post-up ip link set $IFACE promisc on
      
auto bridge
iface bridge
  bridge-ports hostbond2
  bridge-vlan-aware yes
  bridge-stp on
  bridge-vids 1-1000
  bridge-pvid 1
  mstpctl-treeprio 20480

auto bridge.10
iface bridge.10
  address 10.10.0.11/24

auto bridge.20
iface bridge.20  
  address 10.20.0.11/24

auto hostbond2
iface hostbond2
  bond-slaves swp5 swp6
  bond-miimon 100
  bond-mode 802.3ad  
  bond-use-carrier 1
  bond-xmit-hash-policy layer3+4
  bond-lacp-rate 1
  bond-min-links 1  
  